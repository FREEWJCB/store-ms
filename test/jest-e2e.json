{
  "verbose": true,
  "slowTestThreshold": 30,
  "moduleFileExtensions": ["js", "json", "ts"],
  "rootDir": ".",
  "testEnvironment": "node",
  "testRegex": ".e2e-spec.ts$",
  "transform": {
    "^.+\\.(t|j)s$": "ts-jest"
  },
  "moduleNameMapper": {
    "^@/(.*)$": "<rootDir>/../src/$1",
    "^@modules/(.*)$": "<rootDir>/../src/modules/$1",
    "^@test/(.*)$": "<rootDir>/../test/$1"
  },
  "setupFilesAfterEnv": ["jest-extended/all"]
}
